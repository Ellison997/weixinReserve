@model UserOrder.Models.Order

<div class="container" id="container">
    <div class="page input js_show">
        
            <form action="/Orders/Create" method="post" id="addPublish">
                @Html.AntiForgeryToken()
                <div class="page__bd">
                    <div class="weui-cells__title">添加预约场次</div>
                    <div class="weui-cells weui-cells_form">

                        <div class="weui-cell">
                            <div class="weui-cell__hd"><label for="" class="weui-label">日期</label></div>
                            <div class="weui-cell__bd">
                                <input class="weui-input" name="OrderDate" type="text" value="@DateTime.Now.ToString("g")">
                            </div>
                        </div>


                        <div class="weui-cells__title">菜谱</div>
                        <div class="weui-cells weui-cells_form">
                            <div class="weui-cell">
                                <div class="weui-cell__bd">
                                    <textarea class="weui-textarea" placeholder="输入您想添加的菜谱" rows="5" name="Describe"></textarea>

                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="page__bd page__bd_spacing" style="padding-top:20px">
                        <a href="#" onclick="document.getElementById('addPublish').submit();" class="weui-btn weui-btn_primary">添加预约场次</a>
                    </div>
                </div>

            </form>
    </div>
</div>